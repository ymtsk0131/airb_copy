      =fa_icon 'copyright', class: 'footer-copyright-icon'
      Airbnb, Inc.
    .footer-contents__language
      %span.footer-content-bottom
        言語
        =fa_icon 'angle-down', class: 'footer-icon-angle-down'
      %span.footer-content-bottom
        通貨
        =fa_icon 'angle-down', class: 'footer-icon-angle-down'
