- provide(:title, "アカウント作成")
.main
  .registration
    %h3 アカウント作成
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .registration__form
        = f.email_field :email, placeholder: 'メールアドレス', autofocus: true, autocomplete: "email", class: 'registration__form-field'
        = fa_icon 'envelope', class: 'registration__form-icon'
      .registration__form
        = f.text_field :firstname, placeholder: '名', class: 'registration__form-field'
        = fa_icon 'address-card', class: 'registration__form-icon'
      .registration__form
        = f.text_field :lastname, placeholder: '姓', class: 'registration__form-field'
        = fa_icon 'address-card', class: 'registration__form-icon'
      .registration__form
        = f.password_field :password, placeholder: 'パスワード(6文字以上)', autocomplete: "off", class: 'registration__form-field'
        = fa_icon 'key', class: 'registration__form-icon'
      .registration__form
        = f.password_field :password_confirmation, placeholder: 'パスワード再入力', autocomplete: "off", class: 'registration__form-field'
        = fa_icon 'key', class: 'registration__form-icon'
      = f.label :birthday, class: 'registration__label'
      %p ご登録は18歳以上の方に限ります。誕生日は非公開です。
      = f.date_select :birthday, class: 'select', start_year: 1930, end_year: (Time.now.year - 18), default: Date.new(1989, 1, 1)
      %br
      = f.label :gender, class: 'registration__label'
      %br
      = f.select :gender, User.genders.keys
      .registration__form
        = f.text_field :phone, placeholder: '電話番号', class: 'registration__form-field'
        = fa_icon 'phone', class: 'registration__form-icon'
      = f.submit "登録", class: 'registration__submit'
    .registration__bottom-message
      Airbnbアカウントはお持ちですか?
      = render "devise/shared/links"
