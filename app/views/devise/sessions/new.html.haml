.main
  .registration
    %h3 ログイン
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .registration__form
        = f.email_field :email, placeholder: 'メールアドレス',autofocus: true, autocomplete: "email", class: 'registration__form-field'
        = fa_icon 'envelope', class: 'registration__form-icon'
      .registration__form
        = f.password_field :password, placeholder: 'パスワード',autocomplete: "off", class: 'registration__form-field'
        = fa_icon 'key', class: 'registration__form-icon'
      - if devise_mapping.rememberable?
        .registration__label
          = f.check_box :remember_me
          = f.label :remember_me
      = f.submit "ログイン", class: 'registration__submit'
    .registration__bottom-message
      アカウントをお持ちではないですか？
      = render "devise/shared/links"
